script/source = "extends MarginContainer

var paused = false

# Called when the node enters the scene tree for the first time.
func _ready():
	get_node(\"VBoxContainer/Pause Menu\").hide()


# Called every frame. 'delta' is the elapsed time since the previous frame.
func _process(_delta):
	get_node(\"VBoxContainer/MarginContainer/Health and Gems/Health bar containter/HealthBar/Count/BackGround/Number\").text = str(Game.playerHP)
	get_node(\"VBoxContainer/MarginContainer/Health and Gems/Health bar containter/HealthBar/Gauge\").value = float( Game.playerHP)
	get_node(\"VBoxContainer/MarginContainer/Health and Gems/Counters/Gem Count/BackGround/Number\").text = str(Game.currentGems)

func _input(event):
	if event.is_action_pressed(\"ui_menu\"):
		pause()

func _on_resume_button_pressed():
	if paused:
		pause()

func _on_menu_button_pressed():
	get_tree().paused = false
	Utils.returnToMainMenu()

func pause():
	if paused:
		get_node(\"VBoxContainer/Pause Menu\").hide()
		get_tree().paused = false
		paused = false
	else:
		get_node(\"VBoxContainer/Pause Menu\").show()
		get_tree().paused = true
		paused = true
"

